<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminDeliveryOrders">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Admin Dashboard" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/ongoing2"

                            />


                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2a2a2b"
                            android:onClick="ongoingDelivers"
                            android:text="On going Deliveries in the system"
                            android:textColor="#ffff" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/courier" />


                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2a2a2b"
                            android:onClick="DriversInTheSystem"
                            android:text="Delivery Drivers in the system"
                            android:textColor="#ffff" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/deliver"

                            />


                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2a2a2b"
                            android:onClick="changetoadmindelivery"
                            android:text="Delivery Orders From customer"
                            android:textColor="#ffff" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/addfood" />


                        <Button

                            android:id="@+id/btnManageFood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2a2a2b"
                            android:onClick="manageFood"
                            android:text="@string/manageFood"
                            android:textColor="#ffff" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/fg"

                            />


                        <Button


                            android:id="@+id/btnManageCategories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2a2a2b"
                            android:onClick="manageCategory"
                            android:text="@string/manageCategories"
                            android:textColor="#ffff" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"></LinearLayout>

            <Button
                android:id="@+id/DriverLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2a2a2b"
                android:onClick="DriverHome"
                android:text="Driver Login"
                android:textColor="#ffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>