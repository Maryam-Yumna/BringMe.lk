<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/navigationBar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="false"
                    android:background="#009688"
                    app:menu="@menu/bottom_menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="@string/popular_pizza"
                    android:textAppearance="?android:textAppearanceMedium" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_view"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/category2"
                            android:contentDescription="@string/toppizza1"
                            />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="@string/disc_pizza1" />

                        <TextView
                            android:id="@+id/disc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="4"
                            android:padding="4dp"
                            android:text="@string/breif_desc_pizza1" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="5"
                            android:padding="4dp"
                            android:text="@string/pizza1_price" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/button1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/add_to_cart_pizza"
                                    android:background="#009688"
                                    android:layout_margin="10dp"
                                    android:textColor="#ffffff"/>

                                <Button
                                    android:id="@+id/button2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/order_now_pizza"
                                    android:onClick="orderNow"
                                    android:background="#009688"
                                    android:layout_margin="10dp"
                                    android:textColor="#ffffff"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_view3"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/category1"
                            android:contentDescription="This image shows second pizza type"/>

                        <TextView
                            android:id="@+id/name_pizza2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="@string/disc_pizza1" />

                        <TextView
                            android:id="@+id/disc_pizz2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="4"
                            android:padding="4dp"
                            android:text="@string/breif_desc_pizza1" />

                        <TextView
                            android:id="@+id/price_pizza2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="5"
                            android:padding="4dp"
                            android:text="@string/pizza1_price" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/add_to_cart_pizza"
                                    android:background="#009688"
                                    android:layout_margin="10dp"
                                    android:textColor="#ffffff"/>

                                <Button
                                    android:id="@+id/button4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/order_now_pizza"
                                    android:background="#009688"
                                    android:layout_margin="10dp"
                                    android:textColor="#ffffff"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_view4"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/category3"
                            android:contentDescription="this image shows a 3rd kind of pizza"/>

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="@string/pizaa_cat_3"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@+id/disc4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="5"
                            android:padding="4dp"
                            android:text="@string/desc_pizz_3" />

                        <TextView
                            android:id="@+id/price4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="5"
                            android:padding="4dp"
                            android:text="@string/price_pizz_3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/add_to_cart_pizza"
                                android:background="#009688"
                                android:layout_margin="10dp"
                                android:textColor="#ffffff"/>

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_now_pizza"
                                android:background="#009688"
                                android:layout_margin="10dp"
                                android:textColor="#ffffff"/>

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:text="@string/popular_foods"
                    android:textAppearance="?android:textAppearanceMedium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>



</LinearLayout>